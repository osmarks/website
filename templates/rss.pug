doctype xml
rss(version='2.0')
    channel
        title= name
        description= siteDescription
        link= `https://${domain}/`
        lastBuildDate= new Date().toUTCString()
        pubDate= lastUpdate.toUTCString()

        each item in items
            item
                title= item.title
                description= item.description
                link= `https://${domain}/${item.slug}`
                if item.updated
                    pubDate= item.updated.toDate().toUTCString()